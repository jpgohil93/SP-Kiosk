<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/card_padding"
    android:layout_marginBottom="@dimen/item_spacing"
    android:background="@drawable/bg_card"
    android:focusable="true"
    android:clickable="true"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/wifiIcon"
        android:layout_width="@dimen/icon_size_medium"
        android:layout_height="@dimen/icon_size_medium"
        android:src="@android:drawable/ic_menu_always_landscape_portrait"
        android:contentDescription="Wi-Fi Signal"
        android:tint="@color/primary_action" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/item_spacing">

        <TextView
            android:id="@+id/ssidText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ScreenPulse_Guest"
            android:textAppearance="@style/TextAppearance.TV.Body"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Saved"
            android:textAppearance="@style/TextAppearance.TV.Subtitle"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        android:src="@android:drawable/ic_lock_lock"
        android:contentDescription="Secured"
        android:tint="@color/text_secondary"
        android:visibility="visible" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screen_margin"
    android:background="@color/primary_background"
    tools:context=".ui.admin.AdminSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/section_spacing">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin Settings"
            android:textAppearance="@style/TextAppearance.TV.Display" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="Exit Admin"
            android:background="@drawable/bg_button_secondary"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins">

            <!-- Tile 1: Kiosk Mode -->
            <include
                android:id="@+id/tileKioskMode"
                layout="@layout/item_admin_tile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/item_spacing" />

            <!-- Tile 2: Wi-Fi -->
            <include
                android:id="@+id/tileWifi"
                layout="@layout/item_admin_tile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/item_spacing" />

            <!-- Tile 3: Branding -->
            <include
                android:id="@+id/tileBranding"
                layout="@layout/item_admin_tile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/item_spacing" />

            <!-- Tile 4: Updates -->
            <include
                android:id="@+id/tileUpdates"
                layout="@layout/item_admin_tile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/item_spacing" />

            <!-- Tile 5: Export -->
            <include
                android:id="@+id/tileExport"
                layout="@layout/item_admin_tile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/item_spacing" />

            <!-- Tile 6: Import -->
            <include
                android:id="@+id/tileImport"
                layout="@layout/item_admin_tile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/item_spacing" />

        </GridLayout>
    </ScrollView>

</LinearLayout>
